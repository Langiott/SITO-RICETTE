{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "moduleResolution": "node"   /* Aggiungi questa riga se stai usando moduli ES6 */
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
